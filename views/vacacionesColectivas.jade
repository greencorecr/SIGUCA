extends layout

block content
  .container
    br
    h3 Lista de Vacaciones Colectivas
    table.footable.tableVacacionesColectivas
        thead
          tr
            th Nombre
            th Creación
            th Fecha Inicial
            th Fecha Final
            th Cantidad Días
            th Editar
            th Eliminar

        tbody
          each vacacionesColectiva, i in vacacionesColectivas
            tr
              td #{vacacionesColectiva.nombre}
              td #{vacacionesColectiva.fechaCreacion}
              td #{vacacionesColectiva.fechaInicial}
              td #{vacacionesColectiva.fechaFinal}
              td #{vacacionesColectiva.cantidadDias}
              td
                button.btn.btn-default(data-toggle="modal" data-target="#editCorreoRH" value=vacacionesColectiva._id)
                  i.icon-pencil.icon-large.i-success

              td
                button.vacacionesColectivasDelete.btn.btn-default(value=vacacionesColectiva.nombre+','+vacacionesColectiva._id)
                  i.icon-trash.icon-large.i-danger

    #editCorreoRH.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
      .modal-dialog
          .modal-content
            .modal-header
              button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
              h4#myModalLabel.modal-title Actualizar Correo
            .modal-body
              form.formUpdateCorreoRH(action='/correoRHUpdate', method='post')#login-form.well.span4
                .form-group
                  label(for='nombre' style="float:left") Correo:
                  input#nombreCorreoRH.form-control( type= 'email', name="nombreCorreoRH")


                button.btn.btn-success(type='submit') Actualizar
                alertify.myAlert("Browser dialogs made easy!")
                button.btn.btn-danger(type='button', data-dismiss='modal') Cancelar

