   //- Extend block sigucaNavbarItems in external views to add Navigation Elements to Navbar
   //- Agregue a este bloque elementos de la barra de navegación en páginas internas


  body
    nav.navbar-nav.navbar-default.navbar-fixed-top.mainT(role='navigation')
      .navbar-header.mainT
          button.navbar-toggle.mainT(type='button', data-toggle='collapse', data-target='.navbar-ex1-collapse')
              span.sr-only Desplegar navegación
              span.icon-bar
              span.icon-bar
              span.icon-bar
          span#barLogo
            //img(src='/images/GreenCore.png' height="50" width="200",  href="/Ayuda")#sigucaLogo
            //img(src='/images/logo-mideplan.jpg' height="50" width="200",  href="/Ayuda")#sigucaLogo
      .collapse.navbar-collapse.navbar-ex1-collapse
          ul.nav.navbar-nav.navbar-right
            if (usuario)
                ul.nav.nav-pills
                  li
                    if(usuario.tipo == 'Supervisor')
                      a.activeControl(href="/escritorio")
                        i.icon-home.icon-large
                        |&nbsp;Escritorio
                    else
                      if(usuario.tipo == 'Empleado' || usuario.tipo == config.empleadoProfesor)
                        a.activeControl(href="/escritorioEmpl")
                          i.icon-home.icon-large
                          |&nbsp;Escritorio
                      else
                        a.activeControl(href="/escritorioAdmin")
                          i.icon-home.icon-large
                          |&nbsp;Escritorio
                  if(usuario.tipo == 'Supervisor')
                    li
                      a.activeControl(href="/gestionarEventos/todosEventos")
                        i.icon-cogs.icon-large
                        |&nbsp;Acciones
                    //-li
                     a(href="/reportes")
                        i.icon-edit.icon-large
                        |&nbsp;Reportes
                  if(usuario.tipo == 'Supervisor' || usuario.tipo == "Administrador de Reportes")
                    li
                      div.dropdown
                        button.btn.dropdown-toggle.text-primary.father-1.dropMain(type='button', data-toggle="dropdown", style='margin-top:3%; margin-button:0;')
                          i.icon-edit.icon-large
                            |&nbsp;Reportes&nbsp;
                          span.caret
                        ul.dropdown-menu
                          li
                            a.activeControl.son-1(href="/reportes/marcas") Marcas/Tardías
                          li
                            a.activeControl.son-1(href="/reportes/horas") Horas
                          li
                            a.activeControl.son-1(href="/reportes/justificaciones") Justificaciones
                          li
                            a.activeControl.son-1(href="/reportes/extras") Solicitudes
                          li
                            a.activeControl.son-1(href="/reportes/vacaciones") Vacaciones
                          li
                            a.activeControl.son-1(href="/reportes/Feriados") Feriados
                          li
                            a.activeControl.son-1(href="/reportes/confirmacionPresencia") Confirmación de presencia
                          li
                            a.activeControl.son-1(href="/reportes/periodosUsuario") Periodos de usuario

                  if(usuario.tipo == 'Supervisor' || usuario.tipo == 'Empleado' || usuario.tipo == config.empleadoProfesor)
                    li
                      a.activeControl(href="/eventos")
                        i.icon-book.icon-large
                        |&nbsp;Mis Eventos
                  li
                    a.activeControl(href="/configuracion")
                      i.icon-cog.icon-large
                      |&nbsp;Configuración
                  li
                    a.activeControl(href='/Ayuda')
                      i.icon-question-sign.icon-large
                      |&nbsp;Acerca de SIGUCA
                  li
                    a.activeControl(href='/logout')
                      i.icon-off.icon-large
                      |&nbsp;Cerrar Sessión

